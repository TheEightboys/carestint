# Firebase Configuration
# Get these values from your Firebase Console -> Project Settings -> General -> Your Apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Genkit AI (Optional - for AI features)
GOOGLE_GENAI_API_KEY=your_google_ai_api_key

# ===== FLUTTERWAVE PAYMENT GATEWAY =====
# Get these from https://dashboard.flutterwave.com/settings/api

# Public key (safe for client-side)
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-xxxxxxxxxxxxxxxxxxxxxxx-X

# Secret key (server-side only - NEVER expose to client)
FLUTTERWAVE_SECRET_KEY=FLWSECK-xxxxxxxxxxxxxxxxxxxxxxx-X

# Encryption key (for card encryption)
FLUTTERWAVE_ENCRYPTION_KEY=xxxxxxxxxxxxxxxx

# Webhook verification secret (from Flutterwave dashboard -> Settings -> Webhooks)
FLUTTERWAVE_WEBHOOK_SECRET=your_webhook_secret_here

# Base URL (use sandbox for testing)
NEXT_PUBLIC_FLUTTERWAVE_BASE_URL=https://api.flutterwave.com/v3
# For testing: https://api.flutterwave.com/v3 (same URL, but use test API keys)

# ===== CRON JOB SECURITY =====
# Generate a random secret: openssl rand -hex 32
CRON_SECRET=your_secure_random_string_here

# ===== APP CONFIGURATION =====
# Your production URL (used for payment callbacks)
NEXT_PUBLIC_APP_URL=https://your-domain.com
